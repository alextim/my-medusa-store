{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "incremental": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "resolveJsonModule": false,
    "isolatedModules": true
  },
  "include": ["src"],  
  "exclude": ["node_modules"]
}
